<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/base_bg">

    <RelativeLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center">

        <Button
            android:id="@+id/btn_tab_smartablayout"
            style="@style/button_common_style"
            android:text="SmartTabLayout" />

        <Button
            android:id="@+id/btn_tab_flycoablayout"
            style="@style/button_common_style"
            android:layout_below="@id/btn_tab_smartablayout"
            android:text="FlycoTabLayout" />

    </RelativeLayout>
</RelativeLayout>
